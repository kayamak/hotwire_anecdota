<% set_breadcrumbs [["Users", users_path]] %>

<% content_for :title, "Users" %>

<div class="mb-16">
  <h1 class="text-4xl text-center">Users</h1>
</div>

<div class="grid grid-cols-2 gap-x-4">
  <div>
    <table id="users" class="min-w-full divide-y divide-gray-300">
      <thead>
      <tr>
        <th>name</th>
        <th>email</th>
      </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
      <%= render @users %>
      </tbody>
    </table>
  </div>
  <turbo-frame class="border rounded shadow h-96" id="user-profile">
  </turbo-frame>
</div>
