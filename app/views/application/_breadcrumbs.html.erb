<% breadcrumbs = local_assigns.fetch(:breadcrumbs, []) %>

<nav class="flex" aria-label="Breadcrumb">
  <ol role="list" class="flex items-center space-x-4">
    <li>
      <div>
        <a href="<%= root_path %>" class="text-gray-400 hover:text-orange-500">
          <svg class="h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M9.293 2.293a1 1 0 011.414 0l7 7A1 1 0 0117 11h-1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-3a1 1 0 00-1-1H9a1 1 0 00-1 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-6H3a1 1 0 01-.707-1.707l7-7z" clip-rule="evenodd"/>
          </svg>
          <span class="sr-only">Home</span>
        </a>
      </div>
    </li>
    <% breadcrumbs.each do |name, url| %>
      <li class="!ml-1">
        <div class="flex items-center">
          <svg class="h-5 w-5 flex-shrink-0 text-gray-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z"/>
          </svg>
          <%= link_to_unless_current name, url, class: "ml-1 text-sm font-medium text-gray-500 hover:text-orange-600" do %>
            <span class="ml-1 text-sm font-medium text-gray-500"><%= name %></span>
          <% end %>
        </div>
      </li>
    <% end %>
    <% if available_variants.present? %>
      <li class="!ml-1">
        <div class="flex items-center">
          <svg class="h-5 w-5 flex-shrink-0 text-gray-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z"/>
          </svg>
          <span class="ml-1 text-sm font-medium text-gray-500">variant: <%= request.variant.first %></span>
        </div>
      </li>
    <% end %>
  </ol>
</nav>
