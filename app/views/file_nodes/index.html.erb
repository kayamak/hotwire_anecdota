<p style="color: green"><%= notice %></p>

<% content_for :title, "File nodes" %>

<h1 class="text-3xl font-bold">File nodes</h1>

<div class="mb-8">
  <label for="state-test" class="text-sm font-bold">State Tester</label>
  <input id="state-test" class="border border-gray-400 rounded"/>
</div>

<table class="border" >
  <tbody>
  <% @file_nodes.each do |file_node| %>
    <tr class="border-b last:border-none" tabindex="0">
      <td class="py-1 px-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/>
        </svg>
      </td>
      <td class="py-1 px-4 w-96">
        <%= render file_node %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
