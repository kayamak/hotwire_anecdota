<% set_breadcrumbs [["Tabs", component_path(:tabs)]] %>

<%= render 'template',
           title: "Tabs",
           description: "" do %>

  <div data-controller="tablist">
    <div class="sm:hidden">
      <label for="tabs" class="sr-only">Select a tab</label>
      <!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
      <select id="tabs" name="tabs" class="block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
        <option>My Account</option>
        <option>Company</option>
        <!-- No client-side updates necessary here so leave as is.-->
        <option selected>Team Members</option>
        <option>Billing</option>
      </select>
    </div>
    <div class="hidden sm:block">
      <div class="border-b border-gray-200">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
          <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" -->
          <a href="javascript:void(0)"
             data-action="click->tablist#select"
             class="whitespace-nowrap border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">My Account</a>
          <a href="javascript:void(0)"
             data-action="click->tablist#select"
             class="whitespace-nowrap border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Company</a>
          <a href="javascript:void(0)"
             data-action="click->tablist#select"
             class="whitespace-nowrap border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700" aria-current="page">Team Members</a>
          <a href="javascript:void(0)"
             data-action="click->tablist#select"
             class="whitespace-nowrap border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Billing</a>
        </nav>
      </div>
    </div>
  </div>

<% end %>
