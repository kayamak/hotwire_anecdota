<button
  aria-current="<%= current ? "page" : "false" %>"
  data-static-tabs-target="switch"
  data-static-tabs-content-id-param="<%= content_id %>"
  data-action="click->static-tabs#select"
  <% if current %>
    class="border-indigo-500 text-indigo-600 whitespace-nowrap border-b-2 px-1 py-4 text-sm font-medium"
  <% else %>
    class="whitespace-nowrap border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
  <% end %>
>
  <%= title %>
</button>
