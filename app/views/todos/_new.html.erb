<% todo = local_assigns.fetch(:todo) %>

<div class="mt-16" id="todo-new-form">
  <%= form_with model: todo do |f| %>
    <% if todo.errors.any? %>
      <div style="color: red">
        <ul>
          <% todo.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.text_field :title, class: "w-full border border-gray-400 rounded-lg p-1" %>
    <div class="mt-4 text-right">
      <%= f.button "送信する", class: "btn-primary disabled:opacity-50", data: { turbo_submits_with: "送信中..." } %>
    </div>
  <% end %>
</div>
