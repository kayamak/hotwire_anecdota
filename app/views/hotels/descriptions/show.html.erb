<%= turbo_frame_tag :slide_drawer do %>
  <section class="max-w-[768px] ">
    <header class="h-16 py-1 px-4 flex justify-between items-center">
      <h2 class="text-3xl font-bold">宿の紹介</h2>
    </header>
    <div class="px-4">
      <nav class="mt-8 h-16 bg-gray-100 flex justify-between items-center">
        <%= link_to_unless_current "トピックス", hotel_description_path(@hotel), class:"text-center py-5 flex-1 h-full block px-4 border-blue-500 border-b-4" %>
        <%= link_to "お部屋", room_hotel_description_path(@hotel) , class:"text-center py-5 flex-1 h-full block px-4" %>
        <%= link_to "レストラン", restaurant_hotel_description_path(@hotel) , class:"text-center py-5 flex-1 h-full block px-4" %>
        <%= link_to "設備・サービス", amenities_hotel_description_path(@hotel) , class:"text-center py-5 flex-1 h-full block px-4" %>
        <%= link_to "基本情報", basic_info_hotel_description_path(@hotel) , class:"text-center py-5 flex-1 h-full block px-4" %>
      </nav>
    </div>
  </section>
<% end %>
