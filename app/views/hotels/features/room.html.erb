<%= turbo_frame_tag :slide_drawer do %>
  <section class="max-w-[768px] ">
    <header class="h-16 py-1 px-4 flex justify-between items-center">
      <h2 class="text-3xl font-bold">宿の紹介</h2>
    </header>
    <div class="px-4">
      <nav class="mt-8 h-16 bg-gray-100 flex justify-between items-center">
        <%= link_to "トピックス", hotel_features_path(@hotel), class: "text-center py-5 flex-1 h-full block px-4" %>
        <%= link_to "お部屋", room_hotel_features_path(@hotel), class: "text-center py-5 flex-1 h-full block px-4 border-blue-500 border-b-4" %>
        <%= link_to "---", "javascript:void(0)", class: "text-center py-5 flex-1 h-full block px-4" %>
        <%= link_to "---", "javascript:void(0)", class: "text-center py-5 flex-1 h-full block px-4" %>
        <%= link_to "---", "javascript:void(0)", class: "text-center py-5 flex-1 h-full block px-4" %>
      </nav>
      <div class="mt-8">
        <% @features.each do |feature| %>
          <div>
            <%= image_tag "hotel_images/#{feature.image_path}" %>
            <div class="mb-8">
              <h3 class="text-xl font-bold mt-8"><%= feature.tagline %></h3>
              <div class="mt-4"><%= sanitize feature.description %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
